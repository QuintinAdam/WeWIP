<% if @project.errors.none? %>
  <%= turbo_stream.replace "projects-list" do %>
  <%= render partial: "list", locals: {projects: @projects} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "project-new" do %>
  <% if @project.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {project: @project  } %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @project.errors.any? %>
  <%= render partial: "errors", locals: {resource: @project} %>
  <% end %>
<% end %>
