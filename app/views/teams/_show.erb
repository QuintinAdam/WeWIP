<div class='col-md-2'><%= link_to team.name, team_path(team) %></div>

<div class=" scaffold-line-buttons  col-md-2">
  <%= form_with url: team_path(team), html: {data: {'turbo-confirm': "Are you sure you want to delete #{ team.name }?"}, style: "display: inline-block;"}, method: :delete do |f| %>
    <%= f.submit "Delete".html_safe,  class: "delete-team-button btn btn-danger btn-sm" %>
  <% end %>

  <%= link_to "Edit <i class='fa fa-1x fa-list-alt'></i>".html_safe, edit_team_path(team), 'data-turbo' => 'false', disable_with: "Loading...", class: "edit-team-button btn btn-primary btn-sm" %>

</div>
