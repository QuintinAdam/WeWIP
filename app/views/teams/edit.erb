<%= link_to "<i class='fa fa-arrow-circle-left  2x'></i> Back to list".html_safe, teams_path %>

<%= turbo_frame_tag "team__#{@team.id}" do  %>

  <div class="cell editable" style="position: relative;">

    <% if @team.errors.any? %>
      <%= render(partial: "errors", locals: {resource: @team }) %>
    <% end %>

    <h2>Editing <%= @team.name %></h2>
    <%= form_with model: @team, url: team_path(@team) do |f| %>
    <%=  render partial: "form",  locals: {:team => @team, f: f} %>
    <% end %>

  </div>

<% end %>


