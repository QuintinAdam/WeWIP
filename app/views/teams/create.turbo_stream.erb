<% if @team.errors.none? %>
  <%= turbo_stream.replace "teams-list" do %>
  <%= render partial: "list", locals: {teams: @teams} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "team-new" do %>
  <% if @team.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {team: @team  } %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @team.errors.any? %>
  <%= render partial: "errors", locals: {resource: @team} %>
  <% end %>
<% end %>
