<h1>Users</h1>

<div id="users">
  <table class='table table-striped'>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.role %></td>
          <td>
            <%= button_to "Sign in as #{user.name}", impersonate_user_path(user), method: :post, class: 'btn btn-secondary' %>
          </td>

        </tr>
      <% end %>

    </tbody>
  </table>
</div>
